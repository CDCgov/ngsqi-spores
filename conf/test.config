/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run main.nf -profile test,<singularity> --outdir <OUTDIR>
        nextflow run main.nf -profile test,<singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 16
    max_memory = '250.GB'
    max_time   = '6.h'

    // Input data
    input = "$projectDir/assets/samplesheets/read_samplesheet.csv"
    fastas = "$projectDir/assets/samplesheets/reference_samplesheet_local.csv"
    ncbi_email = 'ecstow8@gmail.com'
    ncbi_api_key = '5d28e94ac71b6a27ad1b027d7532e4991108'
    postsim = true
    mode = 'local'
}
